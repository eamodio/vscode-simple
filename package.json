{
	"name": "simple",
	"version": "0.0.1",
	"author": {
		"name": "Eric Amodio",
		"email": "eamodio@gmail.com"
	},
	"publisher": "eamodio",
	"engines": {
		"vscode": "^1.60.0"
	},
	"displayName": "Simple",
	"description": "Simple sample",
	"categories": [
		"Other"
	],
	"homepage": "https://github.com/eamodio/vscode-simple/blob/master/README.md",
	"bugs": {
		"url": "https://github.com/eamodio/vscode-simple/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/eamodio/vscode-simple"
	},
	"contributes": {
		"commands": [
			{
				"command": "simple.open",
				"title": "Open Virtual File",
				"category": "Simple"
			},
			{
				"command": "simple.reset",
				"title": "Reset",
				"category": "Simple"
			}
		]
	},
	"activationEvents": [
		"*",
		"onFileSystem:simple"
	],
	"main": "./dist/extension",
	"scripts": {
		"clean": "git clean -Xdf -e !node_modules -e !node_modules/**/*",
		"compile": "tsc -p ./",
		"lint": "eslint src/**/*.ts --fix",
		"pack": "npx vsce package --yarn",
		"pretty": "prettier --config .prettierrc --loglevel warn --write \"./**/*.{ts,md,json}\"",
		"reset": "yarn run clean && yarn --frozen-lockfile",
		"watch": "tsc -watch -p ./",
		"update-dts": "pushd \"src/@types\" && npx vscode-dts dev && popd",
		"update-dts:master": "pushd \"src/@types\" && npx vscode-dts master && popd",
		"vscode:prepublish": "yarn run reset && yarn run compile"
	},
	"devDependencies": {
		"@types/node": "12.12.24",
		"@types/vscode": "1.60.0",
		"@typescript-eslint/eslint-plugin": "4.32.0",
		"@typescript-eslint/parser": "4.32.0",
		"eslint": "7.32.0",
		"eslint-cli": "1.1.1",
		"eslint-config-prettier": "8.3.0",
		"eslint-plugin-import": "2.24.2",
		"prettier": "2.4.1",
		"typescript": "4.4.3"
	}
}
